{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "y",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "y"
  },
  "emulators": {
    "auth": {
      "port": null
    },
    "functions": {
      "port": null
    },
    "firestore": {
      "port": null
    },
    "database": {
      "port": null
    },
    "hosting": {
      "port": null
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": true
    }
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}
